                </div>
			</div>
    </div>
    <div class="container">
        @*Header*@
		<div style="width:1200px;height:120px" class="float-left">
			<div class="row mt-3" >
                <div class="col-3 mr-4" style="margin-left:-50px">
                    <img src="~/images/Label_Company.PNG" width="200px" height="100%" alt="Sport Sneaker"/>
